import random

# Генеруємо список з 15 дійсних чисел
numbers = [random.uniform(-100, 100) for _ in range(15)]

# Виводимо початковий список
print("Початковий список:")
print(numbers)

# Впорядкуваємо список за спаданням
numbers.sort(reverse=True)

# Виводимо відсортований список
print("\nВідсортований список за спаданням:")
print(numbers)

# Виводимо елементи з непарними індексами
print("\nЕлементи з непарними індексами:")
for i in range(1, len(numbers), 2):
    print(f"Індекс {i}: {numbers[i]}")
